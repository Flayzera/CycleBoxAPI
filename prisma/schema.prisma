generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id      Int    @id @default(autoincrement())
  name    String
  price   Float  
  enabled Boolean 
  image   String
}

model user {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
   created_at DateTime @default(now()) 
  updated_at DateTime @default(now()) @updatedAt
}
